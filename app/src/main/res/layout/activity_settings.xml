<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <EditText
        android:id="@+id/nombrer"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/descripcionr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descripcionr"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/settingImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/direccion"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btnacept"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="55dp"
        android:text="Nombre"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="36dp"
        android:text="Descripcion"
        app:layout_constraintBottom_toTopOf="@+id/settingImage"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/settingImage"
        android:layout_width="162dp"
        android:layout_height="91dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/direccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/culo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="60dp"
        android:text="Dirreccion"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnacept"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnacept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="217dp"
        android:text="ACEPTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>